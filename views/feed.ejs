<% include ./partials/header.ejs %>  
    <div class="w-full min-h-screen bg-zinc-700 text-white p-5">
        <div class="cards flex flex-wrap gap-10">
            <%posts.forEach((post)=>{%>
            <div class="card w-32 text-center">
                <div class=" w-full h-40 rounded-lg overflow-hidden bg-zinc-200 rounded-lg">
                    <img class="h-full w-full object-cover rounded-lg" src="/images/uploads/<%=post.image%>">
                </div>
                <a class="mt-2 inline-block text-md text-center" href="/post/<%=post._id%>"><%=post.title%></a>
                <h5 class="text-sm font-semibold text-zinc-300">By <%=post.user.username%></h5>
            </div>
            <%})%>
        </div>
    </div>
<% include ./partials/footer.ejs %>  
