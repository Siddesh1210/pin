<% include ./partials/header.ejs %> 
    <div class="profile w-full min-h-screen bg-zinc-700 pt-1 text-white">
        <form id="uploadform" hidden action="fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="profdets flex flex-col items-center mt-20">
           <div class="relative">
                <span id="uploadicon" class="w-9 h-9 absolute bottom-0 right-1 flex justify-center items-center bg-zinc-200 rounded-full cursor-pointer"><i class="ri-pencil-line text-zinc-800"></i></span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img src="/images/uploads/<%=user.profileImage%>" class="w-full h-full object-cover">
            </div>
           </div>
            <h1 class="text-3xl font-semibold mt-3"><%=user.fullname%></h1>
            <h3 class="text-md">@<%=user.username%></h3>
            <a id="edit" class="px-7 py-2 bg-zinc-500 rounded-full text-sm font-semibold mt-4">Edit Profile</a>
            <a href="/add" class="px-10 py-3 rounded-full bg-red-700 text-xs font-semibold mt-3">Add New Post</a>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
            <%if(user.posts.length>0){%>
                <div class="card">
                    <div class="w-52 h-40 bg-zinc-200 rounded-xl overflow-hidden">
                        <img src="/images/uploads/<%=user?.posts[0]?.image%>" class="w-full h-full object-cover">
                    </div>
                    <a class="text-xl font-semibold mt-3 inline-block" href="/show/posts">Your uploaded Pins</a>
                    <h5 class="text-sm font-medium opacity-60"><%=user.posts.length%></h5>
                </div>
            <%}%>
        </div>
        </div>
    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener('click',()=>{
            document.querySelector("#uploadform input").click();
        })

        document.querySelector("#edit").addEventListener('click',()=>{
            document.querySelector("#uploadform input").click();
        })

        document.querySelector("#uploadform input").addEventListener('change',()=>{
            document.querySelector("#uploadform").submit();
        })
    </script>

<% include ./partials/footer.ejs %> 